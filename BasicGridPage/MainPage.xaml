<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="BasicGridPage.MainPage"
 Title="Basic Grid demo">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="#4B2615" />
        <Label Text="#4B2615"
 HorizontalOptions="Center"
 VerticalOptions="Center" />
        <BoxView Grid.Column="1"
 Color="#CAACAA" />
        <Label Grid.Column="1"
 Text="#CAACAA"
 HorizontalOptions="Center"
 VerticalOptions="Center" />
        <BoxView Grid.Row="1"
 Color="#FA731919" />
        <Label Grid.Row="1"
 Text="#FA731919"
 HorizontalOptions="Center"
 VerticalOptions="Center" />
        <BoxView Grid.Row="1"
 Grid.Column="1"
 Color="#FE733737" />
        <Label Grid.Row="1"
 Grid.Column="1"
 Text="#FE733737"
 HorizontalOptions="Center"
 VerticalOptions="Center" />
        <BoxView Grid.Row="2"
 Grid.ColumnSpan="2"
 Color="#FFDCDC" />
        <Label Grid.Row="2"
 Grid.ColumnSpan="2"
 Text="#FFDCDC"
 HorizontalOptions="Center"
 VerticalOptions="Center" />
    </Grid>
</ContentPage>